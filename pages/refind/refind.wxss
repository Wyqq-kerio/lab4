/* pages/refind/refind.wxss */
.auto{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}
.form{
    width: 100%;
    background-color: #2f2f2f;
  }
  .hr{
    border: 2rpx solid #cccccc;
    width: 90%;
    margin: 0 auto;
    opacity: 0.3;
  }
  .item{
    border: 2rpx solid #cccccc;
    border-radius: 10rpx;
    width: 90%;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    margin-bottom: 30rpx;
  }
  .item input{
    height: 80rpx;
    line-height: 80rpx;
    color: #999999;
  }
  .phoneUserInfo{
    margin: 0 auto;
    width: 90%;
    display: flex;
    flex-direction: row;
    margin-top: 50rpx;
    margin-bottom: 50rpx;
  }
  
  .code{
    margin: 0 auto;
    border: 2rpx solid #ccc;
    border-radius: 10rpx;
    width: 40%;
    line-height: 80rpx;
    text-align: center;
  }
  .registerBtn{
    margin-bottom: 30rpx;
  }
